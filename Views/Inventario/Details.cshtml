@model OrderDashboard.Models.Inventario

@{
    ViewData["Title"] = "Detalles del Inventario";
}

<h2>Detalles del Inventario</h2>

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">@ViewData["Error"]</div>
}
else if (Model != null)
{
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Model.Nombre</h4>
            <p class="card-text"><strong>Descripción:</strong> @Model.Descripcion</p>
            <p class="card-text"><strong>Cantidad en Stock:</strong> @Model.Cantidad_Stock</p>
            <p class="card-text"><strong>Precio Unitario:</strong> $@Model.Precio_Unitario</p>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.InventarioId" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
}
else
{
    <p class="text-danger">No se encontró el inventario.</p>
}
